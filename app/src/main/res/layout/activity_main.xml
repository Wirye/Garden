<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/activity_main_background_gradient"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/activity_main_nav_header"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:src="@drawable/activity_main_nav_header_background"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        app:layout_constraintTop_toTopOf="@id/main"/>

    <ImageButton
        android:id="@+id/activity_main_settings_button"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginStart="50px"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@id/activity_main_nav_header"
        app:layout_constraintTop_toTopOf="@id/activity_main_nav_header"
        app:layout_constraintBottom_toBottomOf="@id/activity_main_nav_header"
        android:src="@drawable/settings_ico" />


    <ImageButton
        android:id="@+id/activity_main_search_button"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginEnd="50px"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@id/activity_main_account_button"
        app:layout_constraintTop_toTopOf="@id/activity_main_nav_header"
        app:layout_constraintBottom_toBottomOf="@id/activity_main_nav_header"
        android:src="@drawable/search_ico" />

    <ImageButton
        android:id="@+id/activity_main_account_button"
        android:layout_width="84px"
        android:layout_height="84px"
        android:layout_marginEnd="50px"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="@id/activity_main_nav_header"
        app:layout_constraintTop_toTopOf="@id/activity_main_nav_header"
        app:layout_constraintBottom_toBottomOf="@id/activity_main_nav_header"
        android:src="@drawable/avatar_shape" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_main_anime_carousel_scrolly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110px"
        app:layout_constraintTop_toBottomOf="@id/activity_main_nav_header"
        app:layout_constraintStart_toStartOf="@id/main">

        <TextView
            android:id="@+id/activity_main_anime_carousel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50px"
            android:text="Любимое аниме"
            android:fontFamily="@font/nunito_medium"
            android:textSize="64px"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/activity_main_anime_carousel_scrolly"
            app:layout_constraintStart_toStartOf="@id/activity_main_anime_carousel_scrolly" />

        <androidx.cardview.widget.CardView
            android:id="@+id/activity_main_anime_carousel_card_scrollx_1"
            android:layout_width="520px"
            android:layout_height="743px"
            android:layout_marginStart="50px"
            android:layout_marginTop="15px"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@id/activity_main_anime_carousel_text"
            app:layout_constraintStart_toStartOf="@id/activity_main_anime_carousel_scrolly">

            <ImageView
                android:id="@+id/activity_main_anime_carousel_card_1_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/anime_1" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/activity_main_anime_carousel_card_scrollx_2"
            android:layout_width="520px"
            android:layout_height="743px"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15px"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@id/activity_main_anime_carousel_text"
            app:layout_constraintStart_toEndOf="@id/activity_main_anime_carousel_card_scrollx_1">

            <ImageView
                android:id="@+id/activity_main_anime_carousel_card_2_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/anime_1" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/activity_main_anime_carousel_card_scrollx_3"
            android:layout_width="520px"
            android:layout_height="743px"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15px"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@id/activity_main_anime_carousel_text"
            app:layout_constraintStart_toEndOf="@id/activity_main_anime_carousel_card_scrollx_2">

            <ImageView
                android:id="@+id/activity_main_anime_carousel_card_3_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/anime_1" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/activity_main_anime_carousel_card_scrollx_4"
            android:layout_width="520px"
            android:layout_height="743px"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15px"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@id/activity_main_anime_carousel_text"
            app:layout_constraintStart_toEndOf="@id/activity_main_anime_carousel_card_scrollx_3">

            <ImageView
                android:id="@+id/activity_main_anime_carousel_card_4_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/anime_1" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/activity_main_anime_carousel_card_scrollx_5"
            android:layout_width="520px"
            android:layout_height="743px"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15px"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@id/activity_main_anime_carousel_text"
            app:layout_constraintStart_toEndOf="@id/activity_main_anime_carousel_card_scrollx_4">

            <ImageView
                android:id="@+id/activity_main_anime_carousel_card_5_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/anime_1" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_main_music_carousel_scrolly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110px"
        app:layout_constraintTop_toBottomOf="@id/activity_main_anime_carousel_scrolly"
        app:layout_constraintStart_toStartOf="@id/main">

        <TextView
            android:id="@+id/activity_main_music_carousel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50px"
            android:text="Любимая музыка"
            android:fontFamily="@font/nunito_medium"
            android:textSize="64px"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/activity_main_music_carousel_scrolly"
            app:layout_constraintStart_toStartOf="@id/activity_main_music_carousel_scrolly"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/activity_main_music_carousel_card_scrollx_1"
            android:layout_width="1000px"
            android:layout_height="1000px"
            android:layout_marginStart="50px"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="15px"
            app:layout_constraintTop_toBottomOf="@id/activity_main_music_carousel_text"
            app:layout_constraintStart_toStartOf="@id/activity_main_music_carousel_scrolly">

            <ImageView
                android:id="@+id/activity_main_music_carousel_card_1_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/music_1" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/activity_main_music_carousel_card_scrollx_2"
            android:layout_width="1000px"
            android:layout_height="1000px"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="15px"
            app:layout_constraintTop_toBottomOf="@id/activity_main_music_carousel_text"
            app:layout_constraintStart_toEndOf="@id/activity_main_music_carousel_card_scrollx_1">

            <ImageView
                android:id="@+id/activity_main_music_carousel_card_2_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/music_1" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/activity_main_music_carousel_card_scrollx_3"
            android:layout_width="1000px"
            android:layout_height="1000px"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="15px"
            app:layout_constraintTop_toBottomOf="@id/activity_main_music_carousel_text"
            app:layout_constraintStart_toEndOf="@id/activity_main_music_carousel_card_scrollx_2">

            <ImageView
                android:id="@+id/activity_main_music_carousel_card_3_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/music_1" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/activity_main_music_carousel_card_scrollx_4"
            android:layout_width="1000px"
            android:layout_height="1000px"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="15px"
            app:layout_constraintTop_toBottomOf="@id/activity_main_music_carousel_text"
            app:layout_constraintStart_toEndOf="@id/activity_main_music_carousel_card_scrollx_3">

            <ImageView
                android:id="@+id/activity_main_music_carousel_card_4_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/music_1" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/activity_main_music_carousel_card_scrollx_5"
            android:layout_width="1000px"
            android:layout_height="1000px"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="15px"
            app:layout_constraintTop_toBottomOf="@id/activity_main_music_carousel_text"
            app:layout_constraintStart_toEndOf="@id/activity_main_music_carousel_card_scrollx_4">

            <ImageView
                android:id="@+id/activity_main_music_carousel_card_5_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/music_1" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>





    <ImageView
        android:id="@+id/activity_main_nav_footer"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:src="@drawable/activity_main_nav_header_background"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        app:layout_constraintBottom_toBottomOf="@id/main"/>


    <ImageButton
        android:id="@+id/activity_main_home_button"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginStart="50px"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@id/activity_main_nav_footer"
        app:layout_constraintTop_toTopOf="@id/activity_main_nav_footer"
        app:layout_constraintBottom_toBottomOf="@id/activity_main_nav_footer"
        android:src="@drawable/home_ico_fill" />


    <ImageButton
        android:id="@+id/activity_main_anime_button"
        android:layout_width="75px"
        android:layout_height="75px"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@id/activity_main_home_button"
        app:layout_constraintEnd_toStartOf="@id/activity_main_manga_button"
        app:layout_constraintTop_toTopOf="@id/activity_main_nav_footer"
        app:layout_constraintBottom_toBottomOf="@id/activity_main_nav_footer"
        android:src="@drawable/anime_ico" />


    <ImageButton
        android:id="@+id/activity_main_manga_button"
        android:layout_width="87px"
        android:layout_height="87px"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@id/activity_main_home_button"
        app:layout_constraintEnd_toStartOf="@id/activity_main_download_button"
        app:layout_constraintTop_toTopOf="@id/activity_main_nav_footer"
        app:layout_constraintBottom_toBottomOf="@id/activity_main_nav_footer"
        android:src="@drawable/manga_ico" />


    <ImageButton
        android:id="@+id/activity_main_music_button"
        android:layout_width="72px"
        android:layout_height="72px"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@id/activity_main_download_button"
        app:layout_constraintStart_toEndOf="@id/activity_main_manga_button"
        app:layout_constraintTop_toTopOf="@id/activity_main_nav_footer"
        app:layout_constraintBottom_toBottomOf="@id/activity_main_nav_footer"
        android:src="@drawable/music_ico" />


    <ImageButton
        android:id="@+id/activity_main_download_button"
        android:layout_width="72px"
        android:layout_height="72px"
        android:layout_marginEnd="50px"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="@id/activity_main_nav_footer"
        app:layout_constraintTop_toTopOf="@id/activity_main_nav_footer"
        app:layout_constraintBottom_toBottomOf="@id/activity_main_nav_footer"
        android:src="@drawable/download_ico" />




</androidx.constraintlayout.widget.ConstraintLayout>